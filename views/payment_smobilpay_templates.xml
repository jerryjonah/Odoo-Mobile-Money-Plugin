<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SmobilPay Redirect Form Template -->
    <template id="smobilpay_redirect_form">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fa fa-mobile-phone"></i>
                    SmobilPay Mobile Money Payment
                </h5>
                <p class="card-text">
                    Pay securely with your mobile money account:
                </p>
                <ul class="list-unstyled">
                    <li><i class="fa fa-check text-success"></i> MTN Mobile Money</li>
                    <li><i class="fa fa-check text-success"></i> Orange Mobile Money</li>
                    <li><i class="fa fa-check text-success"></i> Express Union Mobile Money</li>
                    <li><i class="fa fa-check text-success"></i> SmobilPay Cash</li>
                </ul>
                <p class="text-muted small">
                    You will be redirected to SmobilPay's secure payment platform to complete your transaction.
                </p>
            </div>
        </div>
    </template>

    <!-- SmobilPay Inline Form Template -->
    <template id="smobilpay_inline_form">
        <div class="smobilpay-payment-form">
            <div class="row">
                <div class="col-md-12">
                    <h6 class="mb-3">
                        <i class="fa fa-mobile-phone text-primary"></i>
                        Mobile Money Payment
                    </h6>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="smobilpay_phone">Phone Number *</label>
                        <input type="tel" 
                               class="form-control" 
                               id="smobilpay_phone" 
                               name="smobilpay_phone"
                               placeholder="e.g. 677123456" 
                               required="required"/>
                        <small class="form-text text-muted">
                            Enter your mobile money phone number
                        </small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="smobilpay_method">Payment Method *</label>
                        <select class="form-control" 
                                id="smobilpay_method" 
                                name="smobilpay_method" 
                                required="required">
                            <option value="">Select payment method</option>
                            <option value="mtn_cm">MTN Mobile Money</option>
                            <option value="orange_cm">Orange Mobile Money</option>
                            <option value="express_union">Express Union Mobile Money</option>
                            <option value="smobilpay_cash">SmobilPay Cash</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i>
                        <strong>How it works:</strong>
                        <ol class="mb-0 mt-2">
                            <li>Enter your mobile money phone number</li>
                            <li>Select your mobile money provider</li>
                            <li>You'll receive a payment prompt on your phone</li>
                            <li>Enter your mobile money PIN to complete payment</li>
                        </ol>
                    </div>
                </div>
            </div>

            <!-- Hidden fields for payment processing -->
            <input type="hidden" name="merchant_reference" t-att-value="merchant_reference"/>
            <input type="hidden" name="callback_url" t-att-value="callback_url"/>
            <input type="hidden" name="return_url" t-att-value="return_url"/>
            <input type="hidden" name="amount" t-att-value="amount"/>
            <input type="hidden" name="currency" t-att-value="currency"/>
        </div>
    </template>

    <!-- Payment Status Messages -->
    <template id="smobilpay_payment_status" name="SmobilPay Payment Status">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block pt48 pb48" data-snippet="s_text_block" data-name="Text">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 col-lg-offset-2 text-center">
                                <t t-if="tx and tx.state == 'done'">
                                    <div class="alert alert-success">
                                        <h3><i class="fa fa-check-circle text-success"></i> Payment Successful!</h3>
                                        <p>Your SmobilPay mobile money payment has been processed successfully.</p>
                                        <p><strong>Transaction Reference:</strong> <t t-esc="tx.reference"/></p>
                                        <t t-if="tx.smobilpay_payment_id">
                                            <p><strong>SmobilPay Payment ID:</strong> <t t-esc="tx.smobilpay_payment_id"/></p>
                                        </t>
                                    </div>
                                </t>
                                
                                <t t-elif="tx and tx.state == 'pending'">
                                    <div class="alert alert-warning">
                                        <h3><i class="fa fa-clock-o text-warning"></i> Payment Processing</h3>
                                        <p>Your payment is being processed. Please wait for confirmation.</p>
                                        <p><strong>Transaction Reference:</strong> <t t-esc="tx.reference"/></p>
                                    </div>
                                </t>
                                
                                <t t-elif="tx and tx.state == 'error'">
                                    <div class="alert alert-danger">
                                        <h3><i class="fa fa-times-circle text-danger"></i> Payment Failed</h3>
                                        <p>Your SmobilPay payment could not be processed.</p>
                                        <t t-if="tx.smobilpay_status_details">
                                            <p><strong>Details:</strong> <t t-esc="tx.smobilpay_status_details"/></p>
                                        </t>
                                        <a href="/shop/cart" class="btn btn-primary">Try Again</a>
                                    </div>
                                </t>
                                
                                <t t-elif="tx and tx.state == 'cancel'">
                                    <div class="alert alert-info">
                                        <h3><i class="fa fa-ban text-info"></i> Payment Cancelled</h3>
                                        <p>Your payment was cancelled.</p>
                                        <a href="/shop/cart" class="btn btn-primary">Return to Cart</a>
                                    </div>
                                </t>
                                
                                <t t-else="">
                                    <div class="alert alert-info">
                                        <h3><i class="fa fa-info-circle text-info"></i> Payment Status</h3>
                                        <p>Checking your payment status...</p>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <!-- SmobilPay Payment Method Icon -->
    <template id="smobilpay_payment_icon" name="SmobilPay Payment Icon">
        <span class="payment-icon-container">
            <i class="fa fa-mobile-phone fa-2x text-success"></i>
            <span class="sr-only">SmobilPay Mobile Money</span>
        </span>
    </template>
</odoo>